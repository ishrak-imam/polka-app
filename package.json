{
  "name": "polkaapp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "./node_modules/.bin/eslint --ignore-path .gitignore --fix --ext .ts,.tsx .",
    "prettier": "./node_modules/.bin/prettier --write --ignore-path .gitignore \"**/*.+(js|ts|tsx|json)\"",
    "check-types": "./node_modules/.bin/tsc",
    "nodeify": "./node_modules/.bin/rn-nodeify --install process,crypto,events,stream --hack --yarn",
    "postinstall": "yarn nodeify && yarn --cwd ./keyring && yarn --cwd ./keyring build"
  },
  "dependencies": {
    "@polkadot/api": "6.7.2",
    "@polkadot/reactnative-identicon": "^0.87.5",
    "@react-navigation/drawer": "^6.1.8",
    "@react-navigation/native": "^6.0.6",
    "@react-navigation/native-stack": "^6.2.5",
    "events": "^1.0.0",
    "fast-text-encoding": "^1.0.3",
    "lodash": "^4.17.21",
    "process": "^0.11.0",
    "react": "17.0.2",
    "react-native": "0.66.3",
    "react-native-crypto": "^2.1.0",
    "react-native-document-picker": "^7.1.1",
    "react-native-fs": "^2.18.0",
    "react-native-gesture-handler": "^1.10.3",
    "react-native-mmkv": "^1.5.3",
    "react-native-paper": "^4.10.1",
    "react-native-randombytes": "^3.0.0",
    "react-native-reanimated": "^2.2.4",
    "react-native-safe-area-context": "^3.3.2",
    "react-native-screens": "^3.9.0",
    "react-native-svg": "^12.1.1",
    "react-native-vector-icons": "^9.0.0",
    "react-native-webview": "^11.15.0",
    "readable-stream": "1.0.33",
    "stream-browserify": "^1.0.0",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.177",
    "@types/react-native": "^0.66.4",
    "@types/react-test-renderer": "^17.0.1",
    "@types/zxcvbn": "^4.4.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.14.0",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "lint-staged": "^12.1.2",
    "metro-react-native-babel-preset": "^0.66.2",
    "react-test-renderer": "17.0.2",
    "rn-nodeify": "^10.3.0",
    "typescript": "^4.4.4"
  },
  "resolutions": {
    "@types/react": "^17",
    "@polkadot/types": "6.7.2",
    "@polkadot/keyring": "7.8.2",
    "@polkadot/util": "7.8.2",
    "@polkadot/util-crypto": "7.8.2"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "react-native": {
    "console": "console-browserify",
    "crypto": "react-native-crypto",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "stream": "stream-browserify"
  },
  "browser": {
    "console": "console-browserify",
    "crypto": "react-native-crypto",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "stream": "stream-browserify"
  },
  "lint-staged": {
    "src/*.{ts,tsx}": [
      "yarn lint",
      "yarn prettier"
    ]
  }
}
